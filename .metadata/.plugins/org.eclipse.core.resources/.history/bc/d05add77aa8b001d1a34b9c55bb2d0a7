package main;

import java.awt.Dimension;
import java.awt.Graphics;
import java.awt.Image;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.JPanel;

import Inputs.KeyboardInputs;

public class GamePanel extends JPanel{
	
	private float nx = 100, ny = 100;
	private float xDir = 1f, yDir = 1f;
	
	private BufferedImage image;
	Image imageResized; 

	public GamePanel() {
		
		importImage();
		setPanelSize();
		addKeyListener(new KeyboardInputs(this));
		
	}
	
	private void importImage() {
		//BufferedImage bufferedImage;
		try {
			image = ImageIO.read(new File("Images/cat2.gif"));
			//imageResized = image.getScaledInstance(50, 50, Image.SCALE_DEFAULT);

		}catch (IOException e) {
			e.printStackTrace();
		}
	}

	private void setPanelSize() {
		Dimension size = new Dimension(400,400);
		setMinimumSize(size);
		setPreferredSize(size);
		setMaximumSize(size);
	}

	public void changeNX(int value)
	{
		this.nx += value;
	}
	
	public void changeNY(int value)
	{
		this.ny += value;
	}
	
	
	public void paintComponent(Graphics g){
		super.paintComponent(g);
		
		g.drawImage(imageResized, (int)nx, (int)ny,null);
	}


}
